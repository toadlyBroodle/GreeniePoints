<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ca.toadlybroodle.greeniepoints.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/text0"
        android:textSize="60dp"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/text0">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text0">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paper not Plastic"
                android:id="@+id/button1"
                android:elegantTextHeight="false"
                android:onClick="onClickButton"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="false"
                android:layout_alignRight="@+id/button5"
                android:layout_alignEnd="@id/button5"
                android:backgroundTint="@color/colorPrimary" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Off not On"
                android:id="@+id/button2"
                android:elegantTextHeight="false"
                android:onClick="onClickButton"
                android:backgroundTint="@color/colorPrimary"
                android:layout_below="@+id/button1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="false"
                android:layout_alignRight="@+id/button5"
                android:layout_alignEnd="@id/button5"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exercise not Drive"
                android:id="@+id/button3"
                android:elegantTextHeight="false"
                android:onClick="onClickButton"
                android:layout_below="@+id/button2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/button5"
                android:layout_alignEnd="@+id/button5"
                android:backgroundTint="@color/colorPrimary" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plants not Meat"
                android:id="@+id/button4"
                android:elegantTextHeight="false"
                android:onClick="onClickButton"
                android:layout_below="@+id/button3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/button5"
                android:layout_alignEnd="@+id/button5"
                android:backgroundTint="@color/colorPrimary"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recycle not Garbage"
                android:id="@+id/button5"
                android:elegantTextHeight="false"
                android:onClick="onClickButton"
                android:layout_below="@+id/button4"
                android:backgroundTint="@color/colorPrimary"
                android:layout_weight="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reuse not Waste"
                android:id="@+id/button6"
                android:elegantTextHeight="false"
                android:onClick="onClickButton"
                android:layout_below="@+id/button5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/button5"
                android:layout_alignEnd="@+id/button5"
                android:backgroundTint="@color/colorPrimary"
                android:layout_weight="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Used not New"
                android:id="@+id/button7"
                android:elegantTextHeight="false"
                android:onClick="onClickButton"
                android:layout_below="@+id/button6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/button5"
                android:layout_alignEnd="@+id/button5"
                android:backgroundTint="@color/colorPrimary"
                android:layout_weight="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Public not Private"
                android:id="@+id/button8"
                android:elegantTextHeight="false"
                android:onClick="onClickButton"
                android:layout_below="@+id/button7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/button5"
                android:layout_alignEnd="@+id/button5"
                android:backgroundTint="@color/colorPrimary"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/text1"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@id/button5"
                android:layout_alignBottom="@+id/button1"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/text2"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@id/button5"
                android:layout_alignBottom="@+id/button2"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/text3"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@id/button5"
                android:layout_alignBottom="@+id/button3"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/text4"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@id/button5"
                android:layout_alignBottom="@+id/button4"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/text5"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@id/button5"
                android:layout_alignBottom="@+id/button5"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/text6"
                android:layout_gravity="center_vertical"
                android:layout_alignBottom="@+id/button6"
                android:layout_toEndOf="@id/button6"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/text7"
                android:layout_gravity="center_vertical"
                android:layout_alignBottom="@+id/button7"
                android:layout_toEndOf="@id/button7"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/text8"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@id/button8"
                android:layout_alignParentBottom="true"
                android:layout_alignBottom="@+id/button8"
                android:layout_marginLeft="5dp" />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text0"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_toEndOf="@+id/scrollView"
        android:layout_toRightOf="@+id/scrollView">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/smallplant"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
